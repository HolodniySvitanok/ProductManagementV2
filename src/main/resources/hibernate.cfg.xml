<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
      
    <!-- SQL диалект -->
    <property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
    <property name="show_sql">true</property>
    <property name="hbm2ddl.auto">update</property>
    
    
    <!-- Подключение объектов сущностей         -->
     <mapping class="com.holodniysvitanok.entity.Category"/> 
     <mapping class="com.holodniysvitanok.entity.Product"/> 
     <mapping class="com.holodniysvitanok.entity.Manufacturer"/> 
     <mapping class="com.holodniysvitanok.entity.Record"/> 
     <mapping class="com.holodniysvitanok.entity.User"/> 

  </session-factory>
</hibernate-configuration>
